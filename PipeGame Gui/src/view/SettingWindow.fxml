<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="153.0" prefWidth="191.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.SettingsWindowController">
   <center>
      <VBox prefHeight="7.0" prefWidth="31.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" prefHeight="18.0" prefWidth="111.0" text="Server Settings:">
               <font>
                  <Font name="Day Poster Black NF" size="14.0" />
               </font>
            </Label>
            <HBox prefHeight="39.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="39.0" prefWidth="90.0" text="IP" />
                  <TextField fx:id="ipField" prefHeight="39.0" prefWidth="140.0" promptText="localHost" />
               </children>
            </HBox>
            <HBox prefHeight="39.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="39.0" prefWidth="90.0" text="Port" />
                  <TextField fx:id="portField" prefHeight="39.0" prefWidth="140.0" promptText="10000" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </VBox>
   </center>
   <top>
   </top>
   <bottom>
      <ToolBar prefHeight="39.0" prefWidth="70.0" BorderPane.alignment="CENTER">
        <items>
          <Button mnemonicParsing="false" onAction="#save" text="Save" />
        </items>
      </ToolBar>
   </bottom>
</BorderPane>
